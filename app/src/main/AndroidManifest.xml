<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prog.gui.guiprogramming">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".food_nut_db.FoodMainActivity"
            android:label="@string/food_app_name" />

        <activity
            android:name=".food_nut_db.FoodFavActivity"
            android:label="@string/food_app_name" />

        <activity
            android:name=".food_nut_db.FoodDetailActivity"
            android:label="@string/food_app_name" />
        <activity
            android:name=".food_nut_db.FoodStatsActivity"
            android:label="@string/food_app_name" />
        <activity
            android:name=".cbc_news_reader.CBCMainActivity"
            android:label="@string/cbc_app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cbc_news_reader.CBCFavActivity"
            android:label="@string/cbc_app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cbc_news_reader.CBCNewsDetailActivity"
            android:label="@string/cbc_app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".cbc_news_reader.CBCStatsActivity"
            android:label="Statistics"
            android:screenOrientation="portrait" />
        <activity
            android:name=".movie_info.MovieMainActivity"
            android:label="@string/movie_app_name" />
        <activity
            android:name=".movie_info.MovieFavActivity"
            android:label="@string/movie_app_name" />
        <activity
            android:name=".movie_info.MovieDetailActivity"
            android:label="Movie details"
            android:parentActivityName=".movie_info.MovieMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".movie_info.MovieStatisticsActivity"
            android:label="Statistics" />
    </application>

</manifest>